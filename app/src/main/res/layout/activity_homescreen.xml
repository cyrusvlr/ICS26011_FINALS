<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_bg_img"
    tools:context=".HomeScreen">


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/homescreen_btn1"
            android:layout_width="155dp"
            android:layout_height="307dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/lexend"
            android:gravity="top|left"
            android:onClick="toSessionsScreen"
            android:text="\nYour sessions"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/homescreen_goals_btn"
                android:layout_width="177dp"
                android:layout_height="104dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="#003049"
                android:fontFamily="@font/lexend"
                android:gravity="bottom|left"
                android:onClick="toUserScreen"
                android:text="Your\nGoals"
                android:textSize="16sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/homescreen_articles_btn"
                android:layout_width="179dp"
                android:layout_height="90dp"
                android:backgroundTint="#003049"
                android:fontFamily="@font/lexend"
                android:gravity="bottom|left"
                android:onClick="toArticlesScreen"
                android:text="Fitness\narticles"
                android:textSize="16sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/homescreen_btn4"
                android:layout_width="179dp"
                android:layout_height="108dp"
                android:backgroundTint="#003049"
                android:fontFamily="@font/lexend"
                android:gravity="bottom|left"
                android:text="Fitbound\nSuggestions"
                android:textSize="16sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>