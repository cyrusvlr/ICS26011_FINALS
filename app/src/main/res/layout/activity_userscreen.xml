<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userdetails_bg_img"
    tools:context=".UserScreen">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="137dp"
        android:layout_marginBottom="58dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="123dp"
            android:layout_height="21dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lexend_bold"
            android:text="You want to"
            android:textAlignment="center"
            android:textColor="#F5FFFFFF"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="164dp" />

        <TextView
            android:id="@+id/update_result_tv"
            android:layout_width="123dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/lexend"
            android:text="Lose Weight"
            android:textAlignment="center"
            android:textColor="#F5FFFFFF"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="196dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginBottom="32dp"
        android:gravity="right|end"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="44dp"
            android:fontFamily="@font/lexend_bold"
            android:text="Weight"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="356dp" />

        <TextView
            android:id="@+id/userscreen_tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:fontFamily="@font/lexend"
            android:text="user weight"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="386dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="414dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lexend_bold"
            android:text="Height"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="508dp" />


        <TextView
            android:id="@+id/userscreen_tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:fontFamily="@font/lexend"
            android:text="user height"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="527dp" />

    </LinearLayout>


    <Button
        android:id="@+id/userscreen_update"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_gravity="bottom|right"
        android:layout_marginStart="263dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#D62828"
        android:fontFamily="@font/lexend_bold"
        android:onClick="updateUserInfo"
        android:text="Update"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8" />


</androidx.constraintlayout.widget.ConstraintLayout>

